---
import Icon from './Icon.astro';

interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title } = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<h1 class="title">{title}</h1>
		{tagline && <p class="tagline">{tagline}</p>}
		<p class="tagline">
			<a href="tel:004948329273">
				<Icon
					icon="phone"
					color="var(--accent-regular)"
					size="1.6em"
					gradient
				/>
				04832 9273
			</a>
			<a href="tel:0049017662590965">
				<Icon
					icon="phone"
					color="var(--accent-regular)"
					size="1.6em"
					gradient
				/>
				0176 625 90 96 5
			</a>
		</p>
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.tagline a {
		display: inline-block;
		color: inherit;
		text-decoration: none;
		margin-right: 24px;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
