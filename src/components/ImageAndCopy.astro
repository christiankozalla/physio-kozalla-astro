---
type Props = {
    img: {
        src: string;
        alt: string;
    };
    copy: string;
    imageObjectPosition: "top" | "center" | "bottom";
};
const { img, copy, imageObjectPosition } = Astro.props;
---

<li class="container" style={`--image-object-position: ${imageObjectPosition};`}>
    <img class="item" src={img.src} alt={img.alt} loading="lazy" />
    <p class="item copy" set:html={copy}/>
    <style>
        .container {
            display: flex;
            flex-direction: row;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
        }

        img.item {
            height: 100%;
            width: 50%;
            max-height: 260px;
            flex-grow: 0;
            flex-shrink: 0;
            object-fit: cover;
            object-position: var(--image-object-position);
        }

        .item:first-child {
            border-radius: 24px 0 0 24px;
        }

        .item:last-child {
            border-radius: 0 24px 24px 0;
        }

        .copy {
            font-size: large;
            padding: 2rem;
            width: 100%;
        }

        @media (max-width: 480px) {
            .container {
                flex-direction: column;
            }

            img.item {
                width: 100%;
                height: 50%;
            }

            .item:first-child {
                border-radius: 24px 24px 0 0;
            }

            .item:last-child {
                border-radius: 0 0 24px 24px;
            }
        }
    </style>
</li>
